<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/menu_popup_panel_holo_light"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp" >

    <com.facebook.widget.ProfilePictureView
        android:id="@+id/ImgVuserImgDP"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
       >
    </com.facebook.widget.ProfilePictureView>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/txtV_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="@color/pinkNew"
            android:textSize="22dp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/fbIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/screen__center_layout"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/com_facebook_button_blue"
            android:src="@drawable/com_facebook_inverse_icon"
            android:layout_centerVertical="true"
            />
    </LinearLayout>




    <TextView
        android:id="@+id/txtReportAbused"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Abuse"
        android:textColor="@color/blue"
        android:textStyle="italic"
        android:gravity="center"
        android:drawableRight="@android:drawable/ic_menu_info_details"/>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="7dp"
        android:gravity="center" >

        <Button
            android:id="@+id/btnUserChat"
            android:layout_width="0dp"
            android:layout_marginRight="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/chat_btn"
            android:padding="10dp"
            />

        <Button
            android:id="@+id/btnUserCancel"
            android:layout_width="0dp"
            android:layout_marginLeft="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/cancel_btn"
            android:padding="10dp"
             />
    </LinearLayout>

</LinearLayout>