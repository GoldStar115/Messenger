<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pop_upinfo_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <com.app.messenger.Facebook_ProfilePictureView_rounded
            android:id="@+id/ImageV_user"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/com_facebook_profile_picture_blank_square" />

        <TextView
            android:id="@+id/txtvProfileNameOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/otherChatcolor"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtv_phoneCAllother"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/tel"
                android:gravity="center"
                android:text="9034777022" />

            <TextView
                android:id="@+id/txtV_FB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/com_facebook_button_blue"
                android:drawableLeft="@drawable/com_facebook_inverse_icon"
                android:padding="7dp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@color/light_grey" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate me ..!"
            android:textColor="@color/otherChatcolor"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/ratingBarG"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="false"
            android:numStars="5"
            android:stepSize="0.1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/avg_rating"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:padding="7dp" >

            <TextView
                android:id="@+id/textViewAVG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/ratingBarAVG"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.1" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@color/light_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnBlocked"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_pinkback"
                android:drawableLeft="@drawable/block_icon"
                android:drawablePadding="4dp"
                android:padding="10dp"
                android:text="Blocked"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnShow_groups"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_pinkback"
                android:padding="10dp"
                android:text="Group&apos;s"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>