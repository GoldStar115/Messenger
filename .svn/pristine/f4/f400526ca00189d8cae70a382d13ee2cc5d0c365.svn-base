//==============================================================================================================================
package com.app.messenger;


//==============================================================================================================================
import android.app.Activity;
import android.view.LayoutInflater;


//==============================================================================================================================
public abstract class AdsProvider
{

    //--------------------------------------------------------------------------------------------------------------------------
    public enum NativeAdsStatus
    {
        UNDEFINED,
        LOADED,
        ERROR
    }

    //--------------------------------------------------------------------------------------------------------------------------
    protected enum State
    {
        UNDEFINED,
        VALID,
        INVALID
    }

    //--------------------------------------------------------------------------------------------------------------------------
    public static class Callbacks
    {

        //----------------------------------------------------------------------------------------------------------------------
        public void onVidoeEnded()
        {
        }

        //----------------------------------------------------------------------------------------------------------------------
        public void onAdLoaded()
        {
        }

        //----------------------------------------------------------------------------------------------------------------------
        public void onAdClicked()
        {
        }

        //----------------------------------------------------------------------------------------------------------------------
        public void onAdClosed()
        {
        }

        //----------------------------------------------------------------------------------------------------------------------
        public void onAdError()
        {
        }
    }

    //--------------------------------------------------------------------------------------------------------------------------
    public static void resetCallbacks(Callbacks callbacks)
    {
        callbacks_ = callbacks;
    }

    //--------------------------------------------------------------------------------------------------------------------------
    public static Callbacks callbacks()
    {
        return callbacks_;
    }

    //--------------------------------------------------------------------------------------------------------------------------
    public static NativeAdsStatus nativeAdsStatus()
    {
        return nativeAdsStatus_;
    }

    //--------------------------------------------------------------------------------------------------------------------------
    protected static void init(Activity activity)
    {
        inflater_ = (LayoutInflater) activity.getSystemService(activity.LAYOUT_INFLATER_SERVICE);
    }

    //--------------------------------------------------------------------------------------------------------------------------
    protected static void nativeAdsLoaded()
    {
        nativeAdsStatus_ = NativeAdsStatus.LOADED;
    }

    //--------------------------------------------------------------------------------------------------------------------------
    protected static void nativeAdsError()
    {
        nativeAdsStatus_ = NativeAdsStatus.ERROR;
    }

    //--------------------------------------------------------------------------------------------------------------------------
    protected static void setToValidState()
    {
        state_ = State.VALID;
    }

    //--------------------------------------------------------------------------------------------------------------------------
    protected static void setToInvalidState()
    {
        state_ = State.INVALID;
    }

    //--------------------------------------------------------------------------------------------------------------------------
    protected static LayoutInflater inflater()
    {
        return inflater_;
    }

    //--------------------------------------------------------------------------------------------------------------------------
    protected static boolean isValid()
    {
        return state_ == State.VALID;
    }

    //--------------------------------------------------------------------------------------------------------------------------
    protected static boolean notInitialized()
    {
        return state_ == State.UNDEFINED;
    }

    //--------------------------------------------------------------------------------------------------------------------------
    private static Callbacks       callbacks_       = null;
    private static LayoutInflater  inflater_        = null;
    private static NativeAdsStatus nativeAdsStatus_ = NativeAdsStatus.UNDEFINED;
    private static State           state_           = State.UNDEFINED;
}
