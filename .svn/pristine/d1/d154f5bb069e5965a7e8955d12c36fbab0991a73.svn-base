<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp"
    android:orientation="horizontal"
    android:paddingRight="5dp" >

    <com.app.messenger.Facebook_ProfilePictureView_rounded
        android:id="@+id/fb_MyChat"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="bottom" >
    </com.app.messenger.Facebook_ProfilePictureView_rounded>

    <LinearLayout
        android:id="@+id/FrameLayoutMyChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="@drawable/own_chat"
        android:orientation="vertical"
        android:padding="2dp" >

        <FrameLayout
            android:id="@+id/FrameLayoutIMAGE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <com.app.util.RoundedCornersGaganImageView
                android:id="@+id/imgV_MyChatImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="5dp"
                android:src="@drawable/no_media" />

            <ImageButton
                android:id="@+id/img_btn_play_youtube_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/play" />
        </FrameLayout>

        <com.rockerhieu.emojicon.EmojiconTextView
            android:id="@+id/txtV_MyChatmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:text="Msg"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtV_MyChatDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="6dp"
            android:padding="2dp"
            android:text="Time"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="italic" />
    </LinearLayout>

</LinearLayout>