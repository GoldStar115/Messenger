<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.app.messenger.PhoneNumberRegistertationScreen" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:padding="25dip"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo_get_groupy" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dip"
                android:text="A message has been sent to your phone with a 4 digit code"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dip"
                android:text="Please enter the code below to complete\nyour phone number verification."
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white" />
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/txtCode1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/grey_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="8dip"
                    android:maxLength="4"
                    android:layout_margin="10dp"
                    android:textColor="@color/black" />
                <EditText
                    android:id="@+id/txtCode2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/grey_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="8dip"
                    android:layout_margin="10dp"
                    android:maxLength="4"
                    android:textColor="@color/black" />
                <EditText
                    android:id="@+id/txtCode3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/grey_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="8dip"
                    android:layout_margin="10dp"
                    android:maxLength="4"
                    android:textColor="@color/black" />
                <EditText
                    android:id="@+id/txtCode4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/grey_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="8dip"
                    android:layout_margin="10dp"
                    android:maxLength="4"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_code_verify_phone_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dip"
                     android:background="@drawable/text_view_create_group_bg"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/txtSendSecure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recieve SMS via Call" 
                    android:textColor="@color/pinkNew"
                    android:textStyle="italic"
                    android:clickable="true"
                    android:textSize="22sp"
                    android:visibility="gone"/>
                
              
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>