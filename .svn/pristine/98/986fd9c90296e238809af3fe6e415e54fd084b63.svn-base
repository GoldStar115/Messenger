<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

<!--     <ImageView -->
<!--         android:id="@+id/request_image" -->
<!--         android:layout_width="@dimen/request_image_height_width" -->
<!--         android:layout_height="@dimen/request_image_height_width" -->
<!--         android:layout_alignParentLeft="true" -->
<!--         android:src="@drawable/request_image" /> -->

<com.app.messenger.Facebook_ProfilePictureView_rounded
         android:id="@+id/request_image"
        android:layout_width="@dimen/request_image_height_width" 
       android:layout_height="@dimen/request_image_height_width" 
       android:layout_alignParentLeft="true"
       android:layout_centerVertical="true"
       android:layout_marginLeft="10dp"
    />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/request_image"
        android:gravity="left|center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="100" >

        <TextView
            android:id="@+id/request_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/edit_profile_left_margin_tv"
            android:layout_weight="50"
            android:text="gagan"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/request_accept_btn"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/edit_profile_left_margin_tv"
            android:layout_weight="25"
            android:background="@drawable/btn_joinaccept"
            android:gravity="center"
            android:text="Accept"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/request_decline_btn"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/edit_profile_left_margin_tv"
            android:layout_weight="25"
            android:background="@drawable/btn_joindecline"
            android:gravity="center"
            android:text="Decline"
            android:textColor="@color/red"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>