    //---------------------------------------------------------------------------------------------------------------------------
    // TODO: c/p
    private File getTempFile()
    {
        if (Environment.getExternalStorageState().equals(Environment.MEDIA_MOUNTED))
        {
            File file = new File(Environment.getExternalStorageDirectory(), TEMP_PHOTO_FILE);
            try
            {
                file.createNewFile();
            }
            catch (IOException e)
            {
            }

            return file; // TODO:
        }
        else  // TODO:
            return null;
    }

