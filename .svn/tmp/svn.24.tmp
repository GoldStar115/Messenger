            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddGroupActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GroupChat"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HangoutActivity"
