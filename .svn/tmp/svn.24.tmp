            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FriendsTabBar"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShowingSocialsFreinds"
